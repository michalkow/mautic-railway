FROM mautic/mautic:latest

ARG MAUTIC_DB_HOST
ARG MAUTIC_DB_PORT
ARG MAUTIC_DB_USER
ARG MAUTIC_DB_PASSWORD
ARG MAUTIC_DB_DATABASE
ARG MAUTIC_TRUSTED_PROXIES
ARG MAUTIC_URL
ARG MAUTIC_ADMIN_EMAIL
ARG MAUTIC_ADMIN_PASSWORD
ARG MAUTIC_DB_DRIVER
ARG MAUTIC_DB_TABLE_PREFIX
ARG MAUTIC_DB_BACKUP_TABLES
ARG MAUTIC_DB_BACKUP_PREFIX
ARG MAUTIC_ADMIN_FIRSTNAME
ARG MAUTIC_ADMIN_LASTNAME
ARG MAUTIC_ADMIN_USERNAME
ARG MAUTIC_MAILER_FROM_NAME
ARG MAUTIC_MAILER_FROM_EMAIL
ARG MAUTIC_MAILER_TRANSPORT
ARG MAUTIC_MAILER_HOST
ARG MAUTIC_MAILER_PORT
ARG MAUTIC_MAILER_USER
ARG MAUTIC_MAILER_PASSWORD
ARG MAUTIC_MAILER_ENCRYPTION
ARG MAUTIC_MAILER_AUTH_MODE
ARG MAUTIC_MAILER_SPOOL_TYPE
ARG MAUTIC_MAILER_SPOOL_PATH

ENV MAUTIC_DB_HOST=$MAUTIC_DB_HOST
ENV MAUTIC_DB_PORT=$MAUTIC_DB_PORT
ENV MAUTIC_DB_USER=$MAUTIC_DB_USER
ENV MAUTIC_DB_PASSWORD=$MAUTIC_DB_PASSWORD
ENV MAUTIC_DB_DATABASE=$MAUTIC_DB_DATABASE
ENV MAUTIC_TRUSTED_PROXIES=$MAUTIC_TRUSTED_PROXIES
ENV MAUTIC_URL=$MAUTIC_URL
ENV MAUTIC_ADMIN_EMAIL=$MAUTIC_ADMIN_EMAIL
ENV MAUTIC_ADMIN_PASSWORD=$MAUTIC_ADMIN_PASSWORD
ENV MAUTIC_DB_DRIVER=$MAUTIC_DB_DRIVER
ENV MAUTIC_DB_TABLE_PREFIX=$MAUTIC_DB_TABLE_PREFIX
ENV MAUTIC_DB_BACKUP_TABLES=$MAUTIC_DB_BACKUP_TABLES
ENV MAUTIC_DB_BACKUP_PREFIX=$MAUTIC_DB_BACKUP_PREFIX
ENV MAUTIC_ADMIN_FIRSTNAME=$MAUTIC_ADMIN_FIRSTNAME
ENV MAUTIC_ADMIN_LASTNAME=$MAUTIC_ADMIN_LASTNAME
ENV MAUTIC_ADMIN_USERNAME=$MAUTIC_ADMIN_USERNAME
ENV MAUTIC_MAILER_FROM_NAME=$MAUTIC_MAILER_FROM_NAME
ENV MAUTIC_MAILER_FROM_EMAIL=$MAUTIC_MAILER_FROM_EMAIL
ENV MAUTIC_MAILER_TRANSPORT=$MAUTIC_MAILER_TRANSPORT
ENV MAUTIC_MAILER_HOST=$MAUTIC_MAILER_HOST
ENV MAUTIC_MAILER_PORT=$MAUTIC_MAILER_PORT
ENV MAUTIC_MAILER_USER=$MAUTIC_MAILER_USER
ENV MAUTIC_MAILER_PASSWORD=$MAUTIC_MAILER_PASSWORD
ENV MAUTIC_MAILER_ENCRYPTION=$MAUTIC_MAILER_ENCRYPTION
ENV MAUTIC_MAILER_AUTH_MODE=$MAUTIC_MAILER_AUTH_MODE
ENV MAUTIC_MAILER_SPOOL_TYPE=$MAUTIC_MAILER_SPOOL_TYPE
ENV MAUTIC_MAILER_SPOOL_PATH=$MAUTIC_MAILER_SPOOL_PATH
ENV PHP_INI_DATE_TIMEZONE='UTC'
